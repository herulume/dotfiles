# Snap window 5 pixels
# snapdist 4

# Set menu font
fontname "Fira mono:pixelsize=17:style=semicondensed"

# Change Menu settings
color menubg #222222 

# Custom Binds
# 4 = Super
# S = shift
# C = control
# M = meta (alt) 

command term kitty
command lock slock


bind-key M-p dmenu_run
bind-key M-b brave
bind-key M-t "st -e tmux new-session"
bind Print "scrot '%Y-%m-%d_$wx$h.png"
bind-key XF86AudioRaiseVolume "amixer -q sset Master 3%+"
bind-key XF86AudioLowerVolume "amixer -q sset Master 3%-"
bind-key XF86AudioMute "amixer -q sset Master toggle"

autogroup 1 "urxvt"
autogroup 1 "kitty"
autogroup 1 "st"
autogroup 1 "xterm"
autogroup 1 "tmux"
autogroup 2 "firefox"
autogroup 2 "firefox-esr"
autogroup 2 "brave"
